<!-- EJS file for trail create page [Done]-->

<%- include("../partials/header") %>
    <div class="row">
        <h1 style="text-align: center">Create a New trail</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/trails" method="POST" enctype="multipart/form-data">
                <div class="form-group">
					<label for="title">Trail Name</label>
                    <input id="title" class="form-control" type="text" name="trail[name]" placeholder="Name">
                </div>
				<div class="form-group">
					<label for="location">Location</label>
                    <input id="location" class="form-control" type="text" name="trail[location]" placeholder="Location">
                </div>
				<div class="form-group">
					<label for="image">Rating</label>
                    <input id="rating" class="form-control" type="number" name="trail[rating]" placeholder="Rate Trail 0-5" min="0" max="5" step="1">
                </div>
				<div class="form-group">
					<label for="distance">Trail Length</label>
                    <input id="distance" class="form-control" type="number" name="trail[distance]" placeholder="Trail Length (km)" min="0">
                </div>
				<div class="form-group">
					<label for="description">Description</label>
                    <input id="description" class="form-control" type="text" name="trail[desc]" placeholder="Description">
                </div>
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
				<div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit Trail!</button>
                </div>
            </form>
            <a href="/trails">Go Back</a>
        </div>
    </div>
<%- include("../partials/footer") %>


  





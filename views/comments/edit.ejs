<!-- EJS file for edit comment page [Done]-->

<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 class="title-center">
			Edit Comment
		</h1>
		<div class="center-form">
			<form action="/trails/<%= trail_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">
						Submit
					</button>
				</div>
			</form>
			<a style="text-align: center; display: block"; href= "/trails">Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>